<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Website Name : @ViewBag.Title</title>
    <script src="~/js/jquery-1.7.1.min.js" type="text/javascript"></script>
    <script src="~/js/extend-1.0.js" type="text/javascript"></script>
    <script src="~/content/extenders" type="text/javascript"></script>
    <link href="~/content/styles" rel="stylesheet" type="text/css" />
    @RenderSection("head",false)
</head>
<body>
    <script src="~/js/facebook.js"></script>
        <header id="header">
            <div class="center clearfix">
                <a href="/" class="logo">
                    <img src="~/imgs/logo.png" />
                </a>
                <h1>Website Name</h1>
                <div class="accountlogs">
                    @if (User != null && User.Identity.IsAuthenticated)
                    {
                    <span>welcome </span><a href="#" data-extender="accountLink">@User.Identity.Name</a>
                        <ul>
                            <li>
                                <a href="@Url.Content("~/account/myprofile")">My Profile</a>
                            </li>
                             <li>
                                <a href="@Url.Content("~/account/signout")" @(User.Identity.AuthenticationType=="facebook"?"data-extender=facebooklogout":"")>Signout</a>
                            </li>
                       </ul>
                    }
                    else
                    {
                    <a href="@Url.Content("~/account/signup")">Signup</a>
                    <a href="@Url.Content("~/account/signin")">Signin</a>
                    }
                </div>
            </div>
        </header>
        <nav id="main-menu">
            <div class="center">
                <ul class="clearfix">
                    @if (User != null && User.Identity.IsAuthenticated )
                    {
                        if(User.IsInRole("Admin")) {
                    <li>
                        <a href="~/admin/users">Users</a>
                    </li>
                    <li>
                        <a href="~/admin/messages">Messages</a>
                    </li>
                    <li class="last">
                        <a href="#">Item 3</a>
                    </li>
                        }
                        else if(User.IsInRole("teacher")) {
                    <li>
                        <a href="~/teacher/blogs">My Blogs</a>
                    </li>
                    <li>
                        <a href="#">Item 2</a>
                    </li>
                    <li class="last">
                        <a href="#">Item 3</a>
                    </li>
                        }
                        else
                        {
                    <li>
                        <a href="#">Questions</a>
                    </li>
                    <li>
                        <a href="#">Item 2</a>
                    </li>
                    <li class="last">
                        <a href="#">Item 3</a>
                    </li>
                        }
                    }
                    else
                    {
                    <li>
                        <a href="#">Item 1</a>
                    </li>
                    <li>
                        <a href="#">Item 2</a>
                    </li>
                    <li class="last">
                        <a href="#">Item 3</a>
                    </li>
                    }
                </ul>
            </div>

        </nav>
        <div id="content">
            <div class="center">
                <div data-role="main">
                    @RenderBody()
                </div>
            </div>

        </div>
        <footer id="footer">
            <div class="center clearfix">
                <ul class="clearfix">
                    <li>
                        <a href="#">Item 1</a>
                    </li>
                    <li>
                        <a href="#">Item 2</a>
                    </li>
                    <li class="last">
                        <a href="#">Item 3</a>
                    </li>
                </ul>
                <div class="copyrights">copyrights@2018</div>
            </div>
        </footer>
</body>
</html>
