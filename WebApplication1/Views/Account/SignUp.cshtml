@model AllEngineers.Models.SignUpModel

<section id="signup-form">
    <h2>Signup to All Engineers Tech</h2>
    @using (Html.BeginForm("signup", "account", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
<div class="row">
    <div class="col-sm-6">
        <fieldset>
            <legend>Personal Data</legend>
            <ul class="form">
                <li>
                    <label>Full Name (<span class="required">*</span>)</label>
                    <span class="validator-holder">
                        @Html.TextBoxFor(x => x.FullName)
                        @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "validator" })
                    </span>

                </li>
                <li>
                    <label>Display Name (<span class="required">*</span>)</label>
                    <span class="validator-holder">
                        @Html.TextBoxFor(x => x.DisplayName)
                        @Html.ValidationMessageFor(x => x.DisplayName, "", new { @class = "validator" })
                    </span>

                </li>
                <li>
                    <label>E-mail (<span class="required">*</span>)</label>
                    <span class="validator-holder">
                        @Html.TextBoxFor(x => x.Email)
                        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "validator" })
                    </span>

                </li>
                <li>
                    <label>Phone (<span class="required">*</span>)</label>
                    <span class="validator-holder">
                        @Html.TextBoxFor(x => x.Phone)
                        @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "validator" })
                    </span>

                </li>
            </ul>
        </fieldset>
    </div>
    <div class="col-sm-6">
        <fieldset>
            <legend>User Credentials</legend>
            <ul class="form">
                <li>
                    <label>Username (<span class="required">*</span>)</label>
                    <span class="validator-holder">
                        @Html.TextBoxFor(x => x.Username)
                        @Html.ValidationMessageFor(x => x.Username, "", new { @class = "validator" })
                    </span>
                </li>
                <li>
                    <label>Password (<span class="required">*</span>)</label>
                    <span class="validator-holder">
                        @Html.PasswordFor(x => x.Password)
                        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "validator" })
                    </span>
                </li>
                <li>
                    <label>Confirm Password (<span class="required">*</span>)</label>
                    <span class="validator-holder">
                        @Html.PasswordFor(x => x.Confirm)
                        @Html.ValidationMessageFor(x => x.Confirm, "", new { @class = "validator" })
                    </span>
                </li>
            </ul>
        </fieldset>
    </div>
</div>
        
        
        <ul class="form">
            <li>
                <input type="submit" value="Create" />
                or <a href="@Url.Content("~/")">Cancel</a>
            </li>
        </ul>
    }
</section>
<div class="orseperator horizontal">
</div>
<section id="social-login">
    <h2>Continue using social accounts</h2>
    <ul class="form">
        <li>
            <a href="~/account/linkedinlogin" data-extender="linkedinLogin" class="linkedin">
                <span class="fa fa-linkedin"></span>
                Login with Linked In
            </a>
        </li>
        <li>
            <a href="~/account/facebooklogin" data-extender="facebookLogin" class="facebook">
                <span class="fa fa-facebook"></span>
                Login with facebook
            </a>
        </li>
        <li>
            <a href="~/account/googlelogin" data-extender="googleLogin" class="gpluss">
                <span class="fa fa-google-plus"></span>
                Login with google+
            </a>
        </li>
    </ul>
</section>